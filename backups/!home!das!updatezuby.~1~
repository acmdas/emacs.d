#!/bin/bash
echo "adding new post to my github website:https://daslearns.ca"

cd ~/data/org/das_fieldstones/

echo "* converting org file to html"

pandoc -s --metadata pagetitle="More Fieldstones 2021" morefieldstones2021.org -o fieldstones2021.html

echo "* git add --all"

git add --all

echo "* commit"

git commit -m "added new post"

echo "*push to github"

git push -u origin master

echo "* Last run at"

date
