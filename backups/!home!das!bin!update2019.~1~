#!/bin/bash
echo "adding new post to my github website:https://acmdas.github.io"

cd ~/data/Writing/Writing/acmdas/das_fieldstones/

echo "* converting markdown file to html"

pandoc -s --metadata pagetitle="More Fieldstones 2019" morefieldstones2019.md -o fieldstones2019.html

echo "* git add --all"

git add --all

echo "* commit"

git commit -m "added new post"

echo "*push to github"

git push -u origin master

echo "* Last run at"

date
